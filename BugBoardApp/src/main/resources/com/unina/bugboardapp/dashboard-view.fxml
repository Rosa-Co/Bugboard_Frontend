<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@styles/custom.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.bugboardapp.controller.DashboardController">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="10" styleClass="sidebar" prefWidth="250">
            <padding><Insets top="20" right="0" bottom="20" left="0"/></padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20 20 20;">
                <Label text="ðŸ›" style="-fx-font-size: 24px;" />
                <Label text="BugBoard" styleClass="title-2" />
            </HBox>
            
            <VBox spacing="5" VBox.vgrow="ALWAYS">
                <Button fx:id="btnIssues" onAction="#onIssuesClick" text="Issues" maxWidth="Infinity" styleClass="sidebar-button" />
                <Button fx:id="btnUsers" onAction="#onUsersClick" text="Users" maxWidth="Infinity" styleClass="sidebar-button" />
            </VBox>
            
            <VBox spacing="10" style="-fx-padding: 20;">
                <Label fx:id="userInfoLabel" text="User Info" styleClass="title-4" wrapText="true" />
                <Button text="Log Out" onAction="#onLogoutClick" styleClass="button,danger,outlined" maxWidth="Infinity" />
            </VBox>
        </VBox>
    </left>
    
    <!-- Center Content -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: -color-bg-default;">
            <children>
                <VBox alignment="CENTER" spacing="15">
                     <Label text="ðŸ‘‹" style="-fx-font-size: 48px;" />
                     <Label text="Select an item from the menu to get started." styleClass="title-3" style="-fx-text-fill: -color-fg-muted;" />
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
