<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@styles/custom.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.bugboardapp.controller.IssueListController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <VBox spacing="5.0">
               <Label text="Issues" styleClass="title-1" />
               <Label text="Manage project issues" styleClass="title-4" />
            </VBox>
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="btnNewIssue" onAction="#onNewIssue" text="+ New Issue" styleClass="button,accent" style="-fx-font-weight: bold;" />
         </children>
      </HBox>
      
      <!-- Filters -->
      <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="card" style="-fx-padding: 15;">
          <TextField fx:id="searchField" promptText="ðŸ” Search..." HBox.hgrow="ALWAYS" style="-fx-pref-height: 35px;" />
          <ComboBox fx:id="typeFilter" promptText="Type" prefWidth="150" style="-fx-pref-height: 35px;" />
          <ComboBox fx:id="stateFilter" promptText="State" prefWidth="150" style="-fx-pref-height: 35px;" />
      </HBox>
      
      <!-- Table -->
      <TableView fx:id="issueTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="50" style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="colTitle" text="Title" prefWidth="300" />
          <TableColumn fx:id="colType" text="Type" prefWidth="100" style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="colPriority" text="Priority" prefWidth="100" style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="colState" text="State" prefWidth="100" style="-fx-alignment: CENTER;" />
          <TableColumn fx:id="colReporter" text="Reporter" prefWidth="150" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
