<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" stylesheets="@styles/custom.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unina.bugboardapp.controller.UserCreateController" style="-fx-background-color: -color-bg-default;" prefWidth="450">
   <children>
      <VBox spacing="5.0" style="-fx-padding: 10 0 20 0;">
         <Label text="New User" styleClass="title-2" />
         <Label text="Add a new team member" styleClass="title-4" />
      </VBox>
      
      <VBox spacing="15.0">
          <VBox spacing="5.0">
             <Label text="Email" style="-fx-font-weight: bold;" />
             <TextField fx:id="emailField" promptText="user@company.com" style="-fx-pref-height: 40px;" />
          </VBox>
          
          <VBox spacing="5.0">
             <Label text="Password" style="-fx-font-weight: bold;" />
             <PasswordField fx:id="passwordField" promptText="Secure password" style="-fx-pref-height: 40px;" />
          </VBox>
    
          <VBox spacing="5.0">
              <Label text="Role" style="-fx-font-weight: bold;" />
              <ComboBox fx:id="typeCombo" maxWidth="Infinity" style="-fx-pref-height: 40px;" />
          </VBox>
      </VBox>
      
      <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 10 0 0 0;">
         <Button cancelButton="true" onAction="#onCancel" text="Cancel" styleClass="button" />
         <Button defaultButton="true" onAction="#onSave" text="Create" styleClass="button,accent" style="-fx-font-weight: bold;" />
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
